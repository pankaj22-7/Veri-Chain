{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./typechain-types/**/*",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
